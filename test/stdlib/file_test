    WriteFile(temp + `/myfile.txt`, `TEST2`)
    WriteFile(temp + `/тест`, `TEST21`)
    arr.finfo fi = ReadDir(temp)
    arr ret
    for item in fi {
        ret += `%{item.Name} %{item.Size}`
    }
    RemoveDir(temp)
    return ret
}
